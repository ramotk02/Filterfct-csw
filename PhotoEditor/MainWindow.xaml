<Window x:Class="PhotoEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- bouton + sliders -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top">
            <Button Content="Bild öffnen" Background="LightGray" Width="150" Height="35" Click="OpenImage_Click" Margin="0 0 0 20"/>

            <TextBlock Text="Red" Margin="0 5 0 0"/>
            <Slider x:Name="RedSlider" Minimum="0" Maximum="200" Value="100" Width="150" ValueChanged="RGB_Changed"/>

            <TextBlock Text="Green" Margin="0 10 0 0"/>
            <Slider x:Name="GreenSlider" Minimum="0" Maximum="200" Value="100" Width="150" ValueChanged="RGB_Changed"/>

            <TextBlock Text="Blue" Margin="0 10 0 0"/>
            <Slider x:Name="BlueSlider" Minimum="0" Maximum="200" Value="100" Width="150" ValueChanged="RGB_Changed"/>
        </StackPanel>

        <!-- Bild öffnen -->
        <Border Grid.Column="1" BorderBrush="Green" BorderThickness="2">
            <Image x:Name="DisplayedImage" Stretch="Uniform" Margin="10"/>
        </Border>

    </Grid>
</Window>
